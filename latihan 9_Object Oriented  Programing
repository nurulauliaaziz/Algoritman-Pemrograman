print()

class landveh():
    
    def __init__(self):
        print()
        print('Ini kendaraan darat!')
        
    def jalan(self):
        print('Ngeeeng...')

        
class motor(landveh):
    
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah kendaraan beroda dua!')
        
class mobil(landveh):
    
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah kendaraan beroda empat!')
        
class bis(landveh):
    
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah kendaraan beroda empat atau lebih!')
        
class sepeda(landveh):
    
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah kendaraan beroda dua!')
        
        
        
v1 = motor('honda','scoopy')
v2 = sepeda('polygon','sepeda gunung')
v3 = mobil('mitsubishi','xpander')
v4 = bis('hyundai','bus pariwisata')
